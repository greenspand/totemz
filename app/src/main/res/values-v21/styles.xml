<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Totemz" parent="AppTheme"/>

    <style name="Totemz.Facebook">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:elevation">@dimen/grid0.5</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/grid1</item>
        <item name="android:textSize">@dimen/txt_size_m</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/states_button_facebook</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Totemz.Google">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:elevation">@dimen/grid0.5</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/grid0.5</item>
        <item name="android:textSize">@dimen/txt_size_m</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/states_button_google</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>