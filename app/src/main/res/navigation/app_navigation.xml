<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/app_navigation"
            app:startDestination="@id/mainFragment">

    <fragment android:id="@+id/mainFragment" android:name="ro.cluj.totemz.MainFragment"
              android:label="main_fragment" tools:layout="@layout/main_fragment">

        <argument app:argType="string" android:name="ARG_USER_NAME" android:defaultValue='"Ola"'/>
        <action android:id="@+id/action_mainFragment_to_userFragment" app:destination="@id/userFragment"/>
    </fragment>

    <fragment android:id="@+id/userFragment" android:name="ro.cluj.totemz.UserFragment"
              android:label="user_fragment" tools:layout="@layout/user_fragment"/>
</navigation>