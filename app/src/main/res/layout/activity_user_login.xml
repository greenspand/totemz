<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/container_user_login"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_user"
        android:layout_width="@dimen/grid10"
        android:layout_height="@dimen/grid10"
        app:srcCompat="@drawable/vector_profle"
        app:layout_constraintRight_toLeftOf="@+id/tv_login_email"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintHorizontal_bias="1.0"/>


    <LinearLayout
        android:id="@+id/cont_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <include
            android:id="@+id/btnFacebookLogin"
            layout="@layout/view_facebook_button"/>

        <include
            android:id="@+id/btnGoogleLogin"
            layout="@layout/view_google_button"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid4"
        android:text="mihaiirimies@gmail.com"
        android:textSize="@dimen/txt_size_m"
        tools:layout_editor_absoluteX="142dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

</android.support.constraint.ConstraintLayout>