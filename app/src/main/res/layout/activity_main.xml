<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_totem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.cluj.totemz.map.TotemzMapActivity">

    <include
        android:id="@+id/moovel_toolbar"
        layout="@layout/toolbar" />

    <fragment
        android:id="@+id/frag_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TotemzMapActivity" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid10"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent" />

    <ImageView
        android:id="@+id/img_camera"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_width="@dimen/grid20"
        android:layout_height="@dimen/grid20"
        android:layout_margin="@dimen/grid2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/vector_camera" />

    <ImageView
        android:id="@+id/img_compass"
        android:layout_width="@dimen/grid20"
        android:layout_height="@dimen/grid20"
        android:layout_margin="@dimen/grid2"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/vector_gps" />

    <ImageView
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:id="@+id/img_user"
        android:layout_width="@dimen/grid20"
        android:layout_height="@dimen/grid20"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/grid2"
        app:srcCompat="@drawable/vector_profle" />

</RelativeLayout>
